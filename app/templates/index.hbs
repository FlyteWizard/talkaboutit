{{! Information --}}
<section>
  <h1>TalkAboutIt</h1>
  <p>
    Search for Tweets about a paticular subject.<br>
    Enter a Search Term in the input field below and Hit Seach.
  </p>
</section>

{{! Form --}}
<section>
  <BsForm>
    <div class="form-group">
      <label for="tweetType">Tweet Type</label>
      <select name="tweetType" id="tweetType" class="form-control">
        <option value="recent">Recent</option>
        <option value="mixed">Mixed</option>
        <option value="popular">Popular</option>
      </select>
    </div>

    <div class="form-row">
      <div class="col-md-5">
        <label for="latitude">Latitude</label>
        <Input @class="form-control" @type="number" @id="latitude" @step="any" @placeholder="48.407326" @property="latitude" />
      </div>
      <div class="col-md-5">
        <label for="longitude">Longitude</label>
        <Input @class="form-control" @type="number" @id="longitude" @step="any" @placeholder="-123.329773" @property="longitude" />
      </div>
      <div class="col-md-2">
        <label for="radius">Radius (KM)</label>
        <Input @class="form-control" @type="number" @id="radius" @step="any" @placeholder="20" @property="radius" />
      </div>
    </div>

    <div class="form-group">
      <label for="searchTerm">Search Term</label>
      <Input @class="form-control" @type="text" @id="searchTerm" @step="any" @placeholder="Search Term" @property="searchTerm" />
    </div>
    
    <BsButton @defaultText="Search" @type="primary" @buttonType="submit" />
  </BsForm>
</section>
